        <activity
            android:name=".ActivityTwo"
            android:label="@string/title_activity_activity_two"
            android:style="Theme.Dialog"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
